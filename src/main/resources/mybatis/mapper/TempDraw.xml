	<select id="findAcntNoListByAcntNameList" resultType="java.lang.String" parameterType="list">
		SELECT
			t.Card1 acntNo
		FROM
			temp_draw t
		<if test="list != null and list.size() > 0">
		WHERE
			t.name1 IN
		<foreach item="item" collection="list" separator="," open="(" close=")" index="">
			#{item}
		</foreach>
		</if>

